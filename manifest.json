{
  "name": "Autochecker Checkbox Manager",
  "version": "1.0.0",
  "description": "Autochecker attempts to avoid marketing spam and automatically accepts terms and conditions when filling out forms.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "browser_action": {},
  "background": {
    "scripts": [
      "./dist/notificationListener.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["./dist/index.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  }
}
