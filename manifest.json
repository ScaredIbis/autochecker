{
  "name": "Autochecker Checkbox Manager",
  "version": "0.1.4",
  "description": "Autochecker will analyze checkboxes on the page, attempting to avoid marketing spam and automatically accept terms and conditions.",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "browser_action": {},
  "background": {
    "scripts": [
      "notificationListener.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["index.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  }
}
